# KullanÄ±cÄ±yÄ± ekle veya kontrol et
def ensure_user(user_id):
    cursor.execute("SELECT * FROM users WHERE user_id=?", (user_id,))
    if cursor.fetchone() is None:
        cursor.execute("INSERT INTO users(user_id, refs) VALUES(?,?)", (user_id,0))
        conn.commit()

